{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": false,
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "public/js/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
