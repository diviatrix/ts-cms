{
  "name": "1337-cms",
  "version": "1.1.0",
  "description": "Tiny but functional cms with sqlite3 db",
  "main": "server.ts",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "start": "npx ts-node server.ts",
    "dev": "nodemon --exec npx ts-node server.ts",
    "test": "tsx node_modules/mocha/bin/_mocha --extensions ts --reporter allure-mocha --require \"tests/setup.ts\" \"tests/**/*.ts\"",
    "test:simple": "mocha tests/simple.test.js",
    "test:allure": "npm test && npm run allure:generate && npm run allure:open",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "cleanup:test-data": "npx ts-node tests/cleanup-test-data.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/diviatrix/ts-cms.git"
  },
  "author": "1337.plus",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/diviatrix/ts-cms/issues"
  },
  "homepage": "https://github.com/diviatrix/ts-cms#readme",
  "dependencies": {
    "@types/jsonwebtoken": "^9.0.9",
    "@types/sqlite3": "^3.1.11",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "highlight.js": "^11.11.1",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "marked": "^16.0.0",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/bcrypt": "^5.0.2",
    "@types/chai": "^5.2.2",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/mocha": "^10.0.10",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "allure-commandline": "^2.34.1",
    "allure-mocha": "^3.3.3",
    "chai": "^5.2.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.27.0",
    "globals": "^16.1.0",
    "mocha": "^11.7.1",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  }
}
